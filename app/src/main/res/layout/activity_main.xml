<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_black">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" >
        <TextView
            android:id="@+id/mine_login_login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:text="登录"  />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="40dp"

        android:paddingEnd="40dp">
        <com.example.ljw.myapplication.ClearEditText
            android:id="@+id/account"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_login_et"
            android:hint="请输入账号"
            android:inputType="textEmailAddress"
            android:paddingStart="15dp"
            android:maxLength="15"
            android:paddingLeft="@dimen/space"
            android:paddingRight="@dimen/space"
            android:layout_marginTop="150dp"
            android:textColorHint="@color/white"
            android:textColor="@color/white" />
        <com.example.ljw.myapplication.ClearEditText
            android:layout_marginTop="16dp"
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_login_et"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:paddingStart="15dp"
            android:paddingLeft="@dimen/space"
            android:paddingRight="@dimen/space"
            android:textColorHint="@color/white"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/login"
            style="@style/Btn_default"
            android:layout_marginTop="@dimen/space2x"

            android:text="登录" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:visibility="gone">

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/divider_height"
            android:layout_weight="1"
            android:background="@color/white_50p" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp4"
            android:layout_marginRight="@dimen/dp4"
            android:text="其他方式登录"
            android:textColor="@color/white_50p"
            android:textSize="@dimen/text_size_12sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/divider_height"
            android:layout_weight="1"
            android:background="@color/white_50p" />
    </LinearLayout>
</LinearLayout>
